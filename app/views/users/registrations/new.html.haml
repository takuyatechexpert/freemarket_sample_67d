.exhibitionHeader
  = image_tag "logo.png", alt: "furima icon", id: "pic1", class: "exhibitionHeader__logo"


#signupPage
  .titleArea
    %h1 アカウントを新規作成
    
    = link_to "ログイン", new_session_path(resource_name)
 
  .container
    = form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|
      = devise_error_messages!
      .form-group
        
        .don 必須
        = f.label :"名字(カナ)"
        = f.text_field :family_name_kana, class: "form-control"
        = f.label :"名前(カナ)"
        %i= f.text_field :first_name_kana, class: "form-control input-lg"

        .form-group
        .don 必須
        = f.label :"名字(漢字)"
        = f.text_field :family_name, class: "form-control"
        = f.label :"名前(漢字)"
        %i= f.text_field :first_name, class: "form-control"

      .form-group
        .don 必須
        = f.label :ニックネーム
        = f.text_field :nick_name, class: "form-control"

      .form-group
        .don 必須
        = f.label :email
        = f.email_field :email, class: "form-control" ,autocomplete: "email"

      .form-length
        %i= @minimum_password_length
        %i 文字以上入力してください
         
      .form-group 
        .don 必須
        = f.label :パスワード
        = f.password_field :password, class: "form-control"
        = f.label :パスワード
        = f.password_field :password_confirmation, class:"form-control"

      .form-group
        = f.fields_for :addresses do |i|
          .don 必須
          = f.label :電話番号
          = i.text_field :tel, class: "form-control"
          .don 必須
          = f.label :郵便番号
          = i.text_field :postal_code, class: "form-control"
          .don 必須
          = f.label :住所
          = i.text_field :municipalities, class: "form-control"
          .don 必須
          = f.label :番地
          = i.text_field :address, class: "form-control"
          .pon 任意
          = f.label :マンション、アパート名
          = i.text_field :home_type, class: "form-control"
          

      .form-group
        .pon 任意
        = f.label :誕生日
        %p= f.text_field :birthday
        -# = f.%input{:max => "9999-12-31", :name => "birthday", :type => "date"}

        .form-group
        カード情報入力画面予定

      .text-center
        = f.submit "アカウントを作成", class: "btn submitBtn"