#div.signinPage
  .div.container
    .h2.title
      %h2 ログイン
      .div.text-center-m-3
        %h5 
        .text-center
          = link_to "新規作成", new_registration_path(resource_name)
          %p= link_to "パスワード忘れた?", new_password_path(resource_name)
          .form-page
            = form_with scope: resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-5, new_user" }, local: true do |f|
              .form-group
                -# = f.label :email
                = f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", placeholder: "email"
                
              .form-group
                -# = f.label :password
                = f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "パスワード"
            
              .form-group
                = f.submit "サインイン", class: 'loginBtn'