.exhibitionHeader
  = image_tag "logo.png", alt: "furima icon", id: "pic1", class: "exhibitionHeader__logo"


#div.signinPage
  .div.container    
    .titleArea
      .h1 ログイン
      .h10.title.text
        .div.text-center-m-3
          %h5 
          .text-center
            = link_to "新規作成", new_registration_path(resource_name)
            %p= link_to "パスワード忘れた?", new_password_path(resource_name)
            .form-page
              = form_with scope: resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-5, new_user" }, local: true do |f|
                .form-group
                  .don 必須
                  = f.label :email
                  = f.email_field :email, class: "form-control" ,autocomplete: "email"

                .form-group
                  .don 必須
                  = f.label :パスワード
                  = f.password_field :password, class: "form-control", autocomplete: "off"
              
                .form-group
                  = f.submit "サインイン", class: 'loginBtn'