.wapper
  = render 'toppages/toppage_header'
= form_tag(pay_card_index_path, method: :post, name: "inputForm") do
  .form-card
    .form-card__content
      .c-num.cc
        .c-num__title
          カード情報を入力して下さい
        %br
        .c-num__top
          .label カード番号
          .label-mark 必須
        .c-num__bottom
          = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
        .c-num__icons
          .c-num__icon
            .fab.fa-cc-jcb
          .c-num__icon
            .fab.fa-cc-amex
          .c-num__icon
            .fab.fa-cc-visa
          .c-num__icon
            .fab.fa-cc-mastercard
          .c-num__icon
            .fab.fa-cc-diners-club
          .c-num__icon
            .fab.fa-cc-discover
      .c-date.cc
        .c-date__top
          .label 有効期限
          .label-mark 必須
        .c-date__bottom
          .c-date__bottom__left
            %select#exp_month{name: "exp_month", type: "text"}
              %option{value: ""} --
              %option{value: "1"}01
              %option{value: "2"}02
              %option{value: "3"}03
              %option{value: "4"}04
              %option{value: "5"}05
              %option{value: "6"}06
              %option{value: "7"}07
              %option{value: "8"}08
              %option{value: "9"}09
              %option{value: "10"}10
              %option{value: "11"}11
              %option{value: "12"}12
            %span 月
          .c-date__bottom__right            
            %select#exp_year{name: "exp_year", type: "text"}
              %option{value: ""} --
              %option{value: "2019"}19
              %option{value: "2020"}20
              %option{value: "2021"}21
              %option{value: "2022"}22
              %option{value: "2023"}23
              %option{value: "2024"}24
              %option{value: "2025"}25
              %option{value: "2026"}26
              %option{value: "2027"}27
              %option{value: "2028"}28
              %option{value: "2029"}29
            %span 年
      .c-num.cc
        .c-num__top
          .label セキュリティコード
          .label-mark 必須
        .c-num__bottom
        = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
      .c-submit.ss
        #card_token
        = submit_tag "追加する", id: "token_submit"
.wapper
  = render 'toppages/toppage_footer'